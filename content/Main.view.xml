<mvc:View controllerName="content.Main"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ux3="sap.ui.ux3">
	<!-- view content goes here -->
	<ux3:Shell id="shell"
appIcon="/sapucc/gbi/files/dev/logo.png"
appTitle="Uniform Crime Reporting"
showLogoutButton="true"
showSearchTool="false"
showInspectorTool="false"
showFeederTool="false"
worksetItemSelected="itemSelected">
		<!-- this adds our username to the header of the shell
		<ux3:headerItems>
			<Label text="GBI_006" tooltip="Username"/>
		</ux3:headerItems>-->
		<ux3:worksetItems>
			<!-- each navigation item has a key so we can trigger
it and a text that is shown -->
		<ux3:NavigationItem key="overview" text="Overview"/>
			<!--	<ux3:NavigationItem key="crimeDetails" text="Crime Details"/>-->
			<ux3:NavigationItem key="violentCrimeDetails" text="Violent Crime Details"/>
			<ux3:NavigationItem key="propertyCrimeDetails" text="Property Crime Details"/>
				<ux3:NavigationItem key="upload" text="Upload "/>
		</ux3:worksetItems>
	</ux3:Shell>
</mvc:View>